  },
  "peerDependencies": {
    "react": ">=18",
    "remotion": ">=4",
    "@remotion/transitions": ">=4"
  },
  "devDependencies": {
    "react": "^19.0.0",
    "@types/react": "^19.0.0",
    "remotion": "^4.0.0",
    "@remotion/transitions": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  }
}

{
  "name": "@oanim/core",
  "version": "0.1.0",
  "description": "Animation presets, components, and design tokens for Remotion",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",

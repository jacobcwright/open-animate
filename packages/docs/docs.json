{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Open Animate",
  "theme": "maple",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#FF8000",
    "light": "#FFB366",
    "dark": "#CC6600"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/jacobcwright/open-animate"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/quickstart"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "templates"]
          },
          {
            "group": "CLI",
            "pages": ["cli/init", "cli/render", "cli/assets"]
          },
          {
            "group": "Reference",
            "pages": [
              "core/element-animations",
              "core/springs-and-easings",
              "core/transitions",
              "core/typography",
              "core/ui-components",
              "core/design-tokens"
            ]
          },
          {
            "group": "Guides",
            "pages": ["guides/media", "guides/composition-patterns", "guides/agent-skill"]
          }
        ]
      },
      {
        "tab": "Platform",
        "groups": [
          {
            "group": "Platform",
            "pages": [
              "platform/overview",
              "platform/authentication",
              "platform/api-keys",
              "platform/cloud-rendering",
              "platform/credits-and-billing",
              "platform/usage"
            ]
          },
          {
            "group": "Self-Hosting",
            "pages": ["platform/self-hosting"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/jacobcwright/open-animate",
          "icon": "github"
        }
      ]
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/jacobcwright/open-animate"
    }
  }
}
